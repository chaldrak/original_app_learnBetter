<%= form_with(model: question, local: true, url: choose_new_or_edit, class:"border p-3 shadow-lg") do |form| %>
  <div id="emailHelp" class="form-text text-danger"><%= render "devise/shared/error_messages", resource: question %></div>
  <div class="mb-3">
    <%= form.label :title, class:"form-label fw-bold" %>
    <%= form.text_field :title, class:"form-control", ariaDescribedby:"titleHelp", placeholder:"e.g. How to solve a differential equation ?" %>
    <div id="titleHelp" class="form-text">Soyez précis et imaginez que vous posez une question à une autre personne</div>
  </div>
  <div class="mb-3">
    <%= form.label :choose_a_picture, class:"form-label fw-bold" %>
    <%= image_tag(@question.picture.url, width: "100%", class:"mb-3") if @question.picture && @question.picture.url %>
    <%= form.file_field :picture, class:"form-control" %>
    <%= form.hidden_field :picture_cache %>
  </div>
  <div class="mb-3">
    <%= form.label :body, class:"form-label fw-bold" %>
    <%= form.text_area :content, class:"form-control", placeholder:"Mettez le contenu de la question ici...", ariaDescribedby:"body", rows:"3" %>
    <div id="body" class="form-text">Incluez toutes les informations dont quelqu'un aurait besoin pour répondre à votre question

    </div>
  </div>
  <%= form.submit I18n.t('others.button.review_your_question'), class:"btn btn-primary" %>
<% end %>