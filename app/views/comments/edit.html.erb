<h1>Editing Comment</h1>

<p class="fw-bold mt-4 mb-2">Your Answer</p>
<%= form_with(model: [@question, @comment], local: true) do |form| %>
  <div id="emailHelp" class="form-text text-danger"><%= render "devise/shared/error_messages", resource: @comment %></div>
  <div class="mb-3">
    <%= form.text_area :content, rows:"3", class:"form-control" %>
  </div>
  <%= form.submit "Post Your Comment", class:"btn btn-primary" %>
<% end %>

