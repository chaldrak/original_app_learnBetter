<div class="middle" style="padding-top: 100px;overflow: auto;">
  <div class="container-fluid">
    <div class="row mb-2">
      <div>
        <h3 class="mb-4">All jobs</h3>
          <div class="messages" style="overflow: auto;">

            <div class="list-group rounded-0">
              <% @jobs.each do |job| %>
                  <a href="#" class="list-group-item list-group-item-action list-group-item-light rounded-0">
                      <div class="media-body ml-4">
                        <div class="d-flex align-items-center justify-content-between mb-1">
                          <h6 class="mb-0 fw-bolder"><%= job.title %></h6>
                        </div>
                        <div>
                          <span class="me-4"><i class="fas fa-map-marked-alt text-primary"></i> <%= job.location %></span>
                          <span><i class="far fa-calendar-alt text-danger"></i> <%= job.deadline %></span>
                        </div><br>
                        <p class="font-italic text-muted mb-0 text-small"><%= job.content %></p>
                      </div>
                  </a>
              <% end %>

            </div>
        </div>
      </div>
  </div>
  <hr>
  <!-- footer -->
  <%= render "partials/footer" %>
</div>

