<div class="container-fluid">
  <div style="padding-top: 100px;width: 40%; display: table; margin: 0 auto;">
    <div class="text-center mb-4">
        <img src="/img/logonew.jpeg" alt="logo" width="80px">
    </div>
    <%= link_to user_google_omniauth_authorize_path, method: :post, class:"border border-dark rounded-pill text-center w-100 btn btn-light mb-4" do %>
        <i class="fab fa-google text-danger"></i> <%= I18n.t('devise.shared.links.sign_in_with_google') %>
    <% end %>
    <%= link_to user_facebook_omniauth_authorize_path, method: :post, class:"border border-primary rounded-pill text-center w-100 btn btn-primary mb-4" do %>
        <i class="fab fa-facebook text-light"></i> <%= I18n.t('devise.shared.links.sign_in_with_facebook') %>
    <% end %>
    <div href="#" class="border border-dark rounded-3 p-4 w-100 mb-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label I18n.t('activerecord.attributes.user.email'), class:"form-label" %>
              <%= f.email_field :email, placeholder:"Entrez votre adresse email", autofocus: true, autocomplete: "email", class:"form-control", ariaDescribedby:"emailHelp" %>
              <div id="emailHelp" class="form-text text-danger"><%= alert %></div>
            </div>
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <%= f.label I18n.t('activerecord.attributes.user.password'), class:"form-label" %>
                <%= link_to I18n.t('devise.shared.links.forgot_your_password'), new_user_password_path, class:"text-decoration-none" %>
              </div>
              <%= f.password_field :password, placeholder:"Entrez votre mot de passe", autocomplete: "current-password", class:"form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <%= f.label :remember_me, class:"form-check-label" %>
              </div>
            <% end %>
            <div class="d-flex justify-content-between">
              <%= f.submit I18n.t('devise.shared.links.sign_in'), class:"btn btn-primary" %>
              <p><%= I18n.t('devise.shared.links.Don_t_have_an_account') %> <%= link_to I18n.t('devise.shared.links.Register'), new_user_registration_path, class:"text-decoration-none" %></p>
            </div>
        <% end %>
    </div>
  </div>
</div>