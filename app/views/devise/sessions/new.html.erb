<div class="container-fluid">
  <div style="padding-top: 80px;width: 40%; display: table; margin: 0 auto;">
    <div class="text-center">
        <img src="/img/lb.jpg" alt="logo" width="200px">
    </div>
    <a href="#" class="border border-dark rounded-pill text-center w-100 btn btn-light mb-4">
        <i class="fab fa-google text-danger"></i> Log in with Google
    </a>
    <a href="#" class="border border-primary rounded-pill text-center w-100 btn btn-primary mb-4">
        <i class="fab fa-facebook text-light"></i> Log in with Facebook
    </a>
    <div href="#" class="border border-dark rounded-3 p-4 w-100 mb-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label "Email address", class:"form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", ariaDescribedby:"emailHelp" %>
              <div id="emailHelp" class="form-text text-danger"><%= alert %></div>
            </div>
            <div class="mb-3">
              <div class="d-flex justify-content-between">
                <%= f.label "Password", class:"form-label" %>
                <%= link_to "Forgot password", new_user_password_path, class:"text-decoration-none" %>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <%= f.label :remember_me, class:"form-check-label" %>
              </div>
            <% end %>
            <div class="d-flex justify-content-between">
                <%= f.submit "Sign in", class:"btn btn-primary" %>
                <p>Don't have an account ? <%= link_to "Register", new_user_registration_path, class:"text-decoration-none" %></p>
            </div>
        <% end %>
    </div>
  </div>
</div>