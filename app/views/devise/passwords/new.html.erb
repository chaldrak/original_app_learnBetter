<div class="container-fluid">
  <div style="padding-top: 80px;width: 40%; display: table; margin: 0 auto;">
    <div class="text-center">
        <img src="/img/lb.jpg" alt="logo" width="200px">
    </div>
    <div href="#" class="border border-dark rounded-3 p-4 w-100 mb-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div id="emailHelp" class="form-text text-danger"><%= render "devise/shared/error_messages", resource: resource %></div>
          <div class="mb-3">
            <%= f.label "Email address", class:"form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
          <div>
              <%= f.submit "Send me reset password instructions", class:"btn btn-primary w-100" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
