<div class="container-fluid">
  <div style="padding-top: 80px;width: 40%; display: table; margin: 0 auto;">
    <div class="text-center">
        <img src="/img/lb.jpg" alt="logo" width="200px">
    </div>
    <%= link_to user_google_omniauth_authorize_path, method: :post, class:"border border-dark rounded-pill text-center w-100 btn btn-light mb-4" do %>
        <i class="fab fa-google text-danger"></i> <%= I18n.t('devise.shared.links.sign_in_with_google') %>
    <% end %>
    <%= link_to user_facebook_omniauth_authorize_path, method: :post, class:"border border-primary rounded-pill text-center w-100 btn btn-primary mb-4" do %>
        <i class="fab fa-facebook text-light"></i> <%= I18n.t('devise.shared.links.sign_in_with_facebook') %>
    <% end %>
    <div href="#" class="border border-dark rounded-3 p-4 w-100 mb-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div id="emailHelp" class="form-text text-danger"><%= render "devise/shared/error_messages", resource: resource %></div>
          <div class="mb-3">
            <%= f.label I18n.t('activerecord.attributes.user.full_name'), class:"form-label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label I18n.t('activerecord.attributes.user.email'), class:"form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label I18n.t('activerecord.attributes.user.password'), class:"form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", ariaDescribedby:"passwordHelp" %>
            <div id="passwordHelp" class="form-text">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= I18n.t('devise.passwords.edit.characters_minimum')%>)</em>
              <% end %>
            </div>
          </div>
          <div class="mb-3">
            <%= f.label I18n.t('activerecord.attributes.user.password_confirmation'), class:"form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", ariaDescribedby:"passwordHelp" %>
          </div>
          <div class="d-flex justify-content-between">
              <%= f.submit I18n.t('devise.shared.links.sign_up'), class:"btn btn-primary" %>
              <p><%= I18n.t('devise.shared.links.Have_an_account')%> <%= link_to I18n.t('devise.shared.links.Login'), new_user_session_path, class:"text-decoration-none" %></p>
          </div>
        <% end %>
    </div>
  </div>
</div>