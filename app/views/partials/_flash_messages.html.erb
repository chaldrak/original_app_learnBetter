<% if flash.present? %>
<script>
  toastr.options = {
    "closeButton": false,
    "debug": false,
    "newestOnTop": false,
    "progressBar": false,
    "positionClass": "toast-top-right",
    "preventDuplicates": false,
    "onclick": null,
    "showDuration": "300",
    "hideDuration": "1000",
    "timeOut": "5000",
    "extendedTimeOut": "1000",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
  }
  <% flash.each do |key, value| %>
    <% x = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
    Command: toastr["<%= x %>"]("<%= value %>")
  <% end %>
</script>
<% end %>